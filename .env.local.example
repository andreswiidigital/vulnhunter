# Database Configuration
# Choose one of the options below:

# Option 1: Vercel Postgres (Recommended for production)
# Get this from: https://vercel.com/dashboard > Storage > Postgres
POSTGRES_URL="postgresql://user:password@host.vercel-storage.com:5432/database"

# Option 2: Supabase (Free tier available)
# Get this from: https://supabase.com > Project Settings > Database
# POSTGRES_URL="postgresql://postgres:password@db.xxx.supabase.co:5432/postgres"

# Option 3: Local PostgreSQL
# POSTGRES_URL="postgresql://postgres:postgres@localhost:5432/vulnhunter"

# Option 4: Docker PostgreSQL
# POSTGRES_URL="postgresql://vulnhunter:vulnhunter123@localhost:5432/vulnhunter"

# Development Settings (Optional)
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Feature Flags (Optional)
ENABLE_RATE_LIMITING="false"
MAX_CONCURRENT_EXPLOITS="5"
SCAN_TIMEOUT="300000"

# Logging (Optional)
LOG_LEVEL="info"
ENABLE_DEBUG_LOGS="true"
